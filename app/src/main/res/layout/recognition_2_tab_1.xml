<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/recognition_2_tab_1_text_1_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="@string/tab_1_appearance"
        android:textColor="@color/primary_text_blue"
        android:textSize="16sp"
        android:fontFamily="@font/roboto"

        android:background="@drawable/rv_bird_card_2"
        android:elevation="4dp"
        android:translationZ="2dp"
        android:paddingVertical="8dp"
        android:paddingHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/recognition_2_tab_1_text_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="@string/tab_1_text_plug"
        android:textColor="@color/primary_text_blue"
        android:textSize="15sp"
        android:fontFamily="@font/roboto"

        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="16dp"

        app:layout_constraintTop_toBottomOf="@id/recognition_2_tab_1_text_1_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/recognition_2_tab_1_text_2_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="@string/tab_1_behaviour"
        android:textColor="@color/primary_text_blue"
        android:textSize="16sp"
        android:fontFamily="@font/roboto"

        android:background="@drawable/rv_bird_card_2"
        android:elevation="4dp"
        android:translationZ="2dp"
        android:paddingVertical="8dp"
        android:paddingHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"

        app:layout_constraintTop_toBottomOf="@id/recognition_2_tab_1_text_1"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/recognition_2_tab_1_text_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="@string/tab_1_text_plug"
        android:textColor="@color/primary_text_blue"
        android:textSize="15sp"
        android:fontFamily="@font/roboto"

        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="16dp"

        app:layout_constraintTop_toBottomOf="@id/recognition_2_tab_1_text_2_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/recognition_2_tab_1_text_3_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="@string/tab_1_habitat"
        android:textColor="@color/primary_text_blue"
        android:textSize="16sp"
        android:fontFamily="@font/roboto"

        android:background="@drawable/rv_bird_card_2"
        android:elevation="4dp"
        android:translationZ="2dp"
        android:paddingVertical="8dp"
        android:paddingHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"

        app:layout_constraintTop_toBottomOf="@id/recognition_2_tab_1_text_2"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/recognition_2_tab_1_text_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="@string/tab_1_text_plug"
        android:textColor="@color/primary_text_blue"
        android:textSize="15sp"
        android:fontFamily="@font/roboto"

        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="16dp"

        app:layout_constraintTop_toBottomOf="@id/recognition_2_tab_1_text_3_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
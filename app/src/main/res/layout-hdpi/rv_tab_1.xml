<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    tools:ignore="ContentDescription"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/tab_1_player_holder"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:visibility="gone"

        android:layout_marginHorizontal="4dp"
        android:layout_marginTop="16dp"

        android:background="@drawable/rv_item_shape_2"
        android:elevation="2dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/tab_1_play_button"
            android:layout_width="40dp"
            android:layout_height="40dp"

            android:scaleX="0.85"
            android:scaleY="0.85"

            android:src="@drawable/ic_play_button"
            android:background="@drawable/ripple_rounded"
            android:elevation="4dp"

            android:padding="4dp"
            android:layout_marginVertical="8dp"
            android:layout_marginStart="8dp"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tab_1_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="@string/timer_plug"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="@color/primary_text_blue"

            android:layout_marginStart="8dp"

            app:layout_constraintTop_toTopOf="@id/tab_1_play_button"
            app:layout_constraintBottom_toBottomOf="@id/tab_1_play_button"
            app:layout_constraintStart_toEndOf="@id/tab_1_play_button"/>

        <ImageButton
            android:id="@+id/tab_1_menu_button"
            android:layout_width="40dp"
            android:layout_height="40dp"

            android:scaleX="0.75"
            android:scaleY="0.75"

            android:src="@drawable/ic_player_menu"
            android:background="@drawable/ripple_rounded"
            android:elevation="4dp"

            android:layout_marginEnd="8dp"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tab_1_play_button"
            app:layout_constraintBottom_toBottomOf="@id/tab_1_play_button"/>

        <SeekBar
            android:id="@+id/tab_1_audio_progress"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_marginHorizontal="8dp"

            app:layout_constraintStart_toEndOf="@id/tab_1_timer"
            app:layout_constraintEnd_toStartOf="@id/tab_1_menu_button"
            app:layout_constraintTop_toTopOf="@id/tab_1_play_button"
            app:layout_constraintBottom_toBottomOf="@id/tab_1_play_button"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tab_1_player_holder">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/tab_1_info_holder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="8dp"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tab_1_player_holder"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/tab_1_text_1_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="@string/tab_1_appearance"
                android:textColor="@color/primary_text_blue"
                android:textSize="14sp"
                android:fontFamily="@font/roboto"

                android:background="@drawable/rv_bird_card_2"
                android:elevation="4dp"
                android:translationZ="2dp"
                android:paddingVertical="8dp"
                android:paddingHorizontal="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/tab_1_text_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="@string/tab_1_text_plug"
                android:textColor="@color/primary_text_blue"
                android:textSize="14sp"
                android:fontFamily="@font/roboto"

                android:layout_marginTop="4dp"
                android:layout_marginHorizontal="16dp"

                app:layout_constraintTop_toBottomOf="@id/tab_1_text_1_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/tab_1_text_2_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="@string/tab_1_behaviour"
                android:textColor="@color/primary_text_blue"
                android:textSize="14sp"
                android:fontFamily="@font/roboto"

                android:background="@drawable/rv_bird_card_2"
                android:elevation="4dp"
                android:translationZ="2dp"
                android:paddingVertical="8dp"
                android:paddingHorizontal="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"

                app:layout_constraintTop_toBottomOf="@id/tab_1_text_1"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/tab_1_text_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="@string/tab_1_text_plug"
                android:textColor="@color/primary_text_blue"
                android:textSize="14sp"
                android:fontFamily="@font/roboto"

                android:layout_marginTop="4dp"
                android:layout_marginHorizontal="16dp"

                app:layout_constraintTop_toBottomOf="@id/tab_1_text_2_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/tab_1_text_3_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="@string/tab_1_habitat"
                android:textColor="@color/primary_text_blue"
                android:textSize="14sp"
                android:fontFamily="@font/roboto"

                android:background="@drawable/rv_bird_card_2"
                android:elevation="4dp"
                android:translationZ="2dp"
                android:paddingVertical="8dp"
                android:paddingHorizontal="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"

                app:layout_constraintTop_toBottomOf="@id/tab_1_text_2"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/tab_1_text_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="@string/tab_1_text_plug"
                android:textColor="@color/primary_text_blue"
                android:textSize="14sp"
                android:fontFamily="@font/roboto"

                android:layout_marginTop="4dp"
                android:layout_marginHorizontal="16dp"

                app:layout_constraintTop_toBottomOf="@id/tab_1_text_3_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/recognition_2_tab_2_time_holder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:background="@drawable/ic_concave_data_holder_small"

        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/recognition_2_tab_2_time_holder"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:src="@drawable/ic_concave_data_holder_small"
            tools:ignore="ContentDescription"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/recognition_2_tab_2_time_title_holder"
            android:layout_width="65dp"
            android:layout_height="25dp"

            android:layout_marginStart="12dp"

            android:background="@drawable/rv_item_shape_1"
            android:elevation="4dp"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/recognition_2_tab_2_time_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:fontFamily="@font/roboto"
                android:gravity="center"
                android:text="@string/time"
                android:textColor="@color/primary_text_blue"
                android:textSize="16sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/recognition_2_tab_2_time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="@string/time_plug"
            android:textColor="@color/primary_text_blue"
            android:fontFamily="@font/roboto"
            android:textSize="16sp"

            app:layout_constraintStart_toEndOf="@id/recognition_2_tab_2_time_title_holder"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
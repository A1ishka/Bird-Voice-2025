<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    tools:ignore="ContentDescription"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/additional_information_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="8dp"
                android:paddingHorizontal="8dp"

                android:text="@string/additional_information"
                android:textColor="@color/primary_text_blue"
                android:textSize="18sp"
                android:fontFamily="@font/roboto"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/additional_username_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="@string/username"
                android:textColor="@color/primary_text_blue"
                android:textSize="14sp"
                android:fontFamily="@font/roboto"

                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="24dp"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/additional_information_text"/>

            <TextView
                android:id="@+id/additional_username_error_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textSize="@dimen/error_ldpi"
                android:textColor="@color/primary_red"
                android:fontFamily="@font/roboto"

                android:visibility="invisible"

                android:layout_marginEnd="12dp"
                android:layout_marginTop="2dp"
                android:elevation="6dp"

                app:layout_constraintEnd_toEndOf="@id/additional_username_input"
                app:layout_constraintTop_toBottomOf="@id/additional_username_input"/>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/additional_username_input"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:background="@drawable/background_launcher_edittext"
                android:elevation="4dp"
                android:layout_marginTop="2dp"
                android:paddingVertical="12dp"
                android:paddingHorizontal="14dp"

                android:textSize="14sp"
                android:textColor="@color/primary_text_blue"
                android:fontFamily="@font/roboto"
                android:inputType="textEmailAddress"

                android:lines="1"
                android:maxLines="1"
                android:maxLength="28"

                app:layout_constraintStart_toStartOf="@id/additional_username_title"
                app:layout_constraintEnd_toEndOf="@id/additional_username_title"
                app:layout_constraintTop_toBottomOf="@id/additional_username_title"/>

            <TextView
                android:id="@+id/additional_firstname_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="@string/first_name"
                android:textColor="@color/primary_text_blue"
                android:textSize="14sp"
                android:fontFamily="@font/roboto"

                android:layout_marginTop="24dp"
                android:layout_marginHorizontal="24dp"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/additional_username_input"/>

            <TextView
                android:id="@+id/additional_firstname_error_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textSize="@dimen/error_ldpi"
                android:textColor="@color/primary_red"
                android:fontFamily="@font/roboto"

                android:visibility="invisible"

                android:layout_marginEnd="12dp"
                android:layout_marginTop="4dp"
                android:elevation="6dp"

                app:layout_constraintEnd_toEndOf="@id/additional_firstname_input"
                app:layout_constraintTop_toBottomOf="@id/additional_firstname_input"/>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/additional_firstname_input"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:background="@drawable/background_launcher_edittext"
                android:elevation="4dp"
                android:layout_marginTop="4dp"
                android:paddingVertical="12dp"
                android:paddingHorizontal="14dp"

                android:textSize="14sp"
                android:textColor="@color/primary_text_blue"
                android:fontFamily="@font/roboto"
                android:inputType="textPassword"

                android:lines="1"
                android:maxLines="1"
                android:maxLength="24"
                android:ems="15"

                app:layout_constraintStart_toStartOf="@id/additional_firstname_title"
                app:layout_constraintEnd_toEndOf="@id/additional_firstname_title"
                app:layout_constraintTop_toBottomOf="@id/additional_firstname_title"/>

            <TextView
                android:id="@+id/additional_lastname_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="@string/last_name"
                android:textColor="@color/primary_text_blue"
                android:textSize="14sp"
                android:fontFamily="@font/roboto"

                android:layout_marginTop="24dp"
                android:layout_marginHorizontal="24dp"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/additional_firstname_input"/>

            <TextView
                android:id="@+id/additional_lastname_error_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textSize="@dimen/error_ldpi"
                android:textColor="@color/primary_red"
                android:fontFamily="@font/roboto"

                android:visibility="invisible"

                android:layout_marginEnd="12dp"
                android:layout_marginTop="4dp"
                android:elevation="6dp"

                app:layout_constraintEnd_toEndOf="@id/additional_lastname_input"
                app:layout_constraintTop_toBottomOf="@id/additional_lastname_input"/>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/additional_lastname_input"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:background="@drawable/background_launcher_edittext"
                android:elevation="4dp"
                android:layout_marginTop="4dp"
                android:paddingVertical="12dp"
                android:paddingHorizontal="14dp"

                android:textSize="14sp"
                android:textColor="@color/primary_text_blue"
                android:fontFamily="@font/roboto"
                android:inputType="textPassword"

                android:lines="1"
                android:maxLines="1"
                android:maxLength="24"
                android:ems="15"

                app:layout_constraintStart_toStartOf="@id/additional_lastname_title"
                app:layout_constraintEnd_toEndOf="@id/additional_lastname_title"
                app:layout_constraintTop_toBottomOf="@id/additional_lastname_title"/>

            <ImageView
                android:id="@+id/additional_bottom_left_cloud"
                android:layout_width="80dp"
                android:layout_height="100dp"

                android:src="@drawable/additional_cloud_bottom_left"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/additional_lastname_input"/>

            <ImageView
                android:id="@+id/additional_bottom_right_cloud"
                android:layout_width="120dp"
                android:layout_height="100dp"

                android:src="@drawable/additional_cloud_bottom_right"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/additional_lastname_input"/>

            <ImageView
                android:id="@+id/additional_bird"
                android:layout_width="100dp"
                android:layout_height="wrap_content"

                android:src="@drawable/additional_bird"

                app:layout_constraintVertical_bias="0.63"

                app:layout_constraintEnd_toStartOf="@id/additional_bottom_right_cloud"
                app:layout_constraintStart_toEndOf="@id/additional_bottom_left_cloud"
                app:layout_constraintTop_toTopOf="@id/additional_bottom_right_cloud"
                app:layout_constraintBottom_toBottomOf="@id/additional_bottom_right_cloud"/>

            <TextView
                android:id="@+id/additional_privacy_policy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="@string/by_continuing_you_agree_to_our_privacy_policy"
                android:textColor="@color/primary_text_blue"
                android:fontFamily="@font/roboto"
                android:textSize="13sp"
                android:textColorLink="@color/primary_text_blue"
                android:linksClickable="true"

                android:gravity="center"
                android:layout_marginHorizontal="16dp"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/additional_bottom_right_cloud" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/additional_create_button"
                android:layout_width="match_parent"
                android:layout_height="60dp"

                android:text="@string/create"
                android:textAllCaps="false"
                android:fontFamily="@font/roboto"
                android:textColor="@color/primary_text_blue"
                android:textSize="14sp"

                android:clickable="false"

                android:backgroundTint="@color/white"

                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="12dp"

                app:icon="@drawable/ic_button_bird"
                app:iconGravity="textEnd"
                app:iconSize="25dp"

                app:cornerRadius="32dp"
                app:rippleColor="@color/primary_button_push"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/additional_privacy_policy"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="20dp"

                app:layout_constraintTop_toBottomOf="@id/additional_create_button"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    tools:ignore="ContentDescription"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/recognition_2_tab_2_vertical_separator"
        android:layout_width="1dp"
        android:layout_height="wrap_content"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/recognition_2_tab_2_time_holder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:background="@drawable/ic_concave_data_holder_small"

        android:layout_marginTop="16dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/recognition_2_tab_2_vertical_separator"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:src="@drawable/ic_concave_data_holder_small"
            tools:ignore="ContentDescription"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/recognition_2_tab_2_time_title_holder"
            android:layout_width="65dp"
            android:layout_height="25dp"

            android:layout_marginStart="12dp"

            android:background="@drawable/rv_item_shape_1"
            android:elevation="4dp"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/recognition_2_tab_2_time_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:fontFamily="@font/roboto"
                android:gravity="center"
                android:text="@string/time"
                android:textColor="@color/primary_text_blue"
                android:textSize="15sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/recognition_2_tab_2_time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="@string/time_plug"
            android:textColor="@color/primary_text_blue"
            android:fontFamily="@font/roboto"
            android:textSize="15sp"

            app:layout_constraintStart_toEndOf="@id/recognition_2_tab_2_time_title_holder"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/recognition_2_tab_2_date_holder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:background="@drawable/ic_concave_data_holder_small"

        android:layout_marginTop="16dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/recognition_2_tab_2_vertical_separator"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:src="@drawable/ic_concave_data_holder_small"
            tools:ignore="ContentDescription"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/recognition_2_tab_2_date_title_holder"
            android:layout_width="65dp"
            android:layout_height="25dp"

            android:layout_marginStart="12dp"

            android:background="@drawable/rv_item_shape_1"
            android:elevation="4dp"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/recognition_2_tab_2_date_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:fontFamily="@font/roboto"
                android:gravity="center"
                android:text="@string/date"
                android:textColor="@color/primary_text_blue"
                android:textSize="15sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/recognition_2_tab_2_date_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="@string/date_plug"
            android:textColor="@color/primary_text_blue"
            android:fontFamily="@font/roboto"
            android:textSize="15sp"

            app:layout_constraintStart_toEndOf="@id/recognition_2_tab_2_date_title_holder"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/recognition_2_tab_2_place_holder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:background="@drawable/ic_concave_data_holder_big"

        android:layout_marginVertical="16dp"

        app:layout_constraintTop_toBottomOf="@id/recognition_2_tab_2_date_holder"
        app:layout_constraintEnd_toEndOf="@id/recognition_2_tab_2_date_holder"
        app:layout_constraintStart_toStartOf="@id/recognition_2_tab_2_time_holder">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:src="@drawable/ic_concave_data_holder_big"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <LinearLayout
            android:id="@+id/recognition_2_tab_2_place_title_holder"
            android:layout_width="65dp"
            android:layout_height="25dp"

            android:layout_marginStart="12dp"

            android:background="@drawable/rv_item_shape_1"
            android:elevation="4dp"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/recognition_2_tab_2_place_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:fontFamily="@font/roboto"
                android:gravity="center"
                android:text="@string/place"
                android:textColor="@color/primary_text_blue"
                android:textSize="15sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/recognition_2_tab_2_place_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:fontFamily="@font/roboto"
            android:text="@string/place_plug"
            android:textColor="@color/primary_text_blue"
            android:textSize="13sp"
            android:textStyle="bold"

            android:layout_marginHorizontal="4dp"
            android:gravity="center"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/recognition_2_tab_2_place_title_holder"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/recognition_2_tab_2_id_holder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:background="@drawable/ic_concave_data_holder_big"

        android:layout_marginVertical="16dp"

        app:layout_constraintTop_toBottomOf="@id/recognition_2_tab_2_place_holder"
        app:layout_constraintEnd_toEndOf="@id/recognition_2_tab_2_date_holder"
        app:layout_constraintStart_toStartOf="@id/recognition_2_tab_2_time_holder">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:src="@drawable/ic_concave_data_holder_big"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/recognition_2_tab_2_id_title_holder"
            android:layout_width="65dp"
            android:layout_height="25dp"

            android:layout_marginStart="12dp"

            android:background="@drawable/rv_item_shape_1"
            android:elevation="4dp"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/recognition_2_tab_2_id_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:fontFamily="@font/roboto"
                android:gravity="center"
                android:text="@string/id"
                android:textColor="@color/primary_text_blue"
                android:textSize="15sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/recognition_2_tab_2_id_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:fontFamily="@font/roboto"
            android:text="@string/id_plug"
            android:textColor="@color/primary_text_blue"
            android:textSize="13sp"
            android:textStyle="bold"

            android:layout_marginHorizontal="4dp"
            android:gravity="center"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/recognition_2_tab_2_id_title_holder"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/recognition_2_tab_2_map_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:background="@drawable/background_map_plug_title"
        android:elevation="4dp"

        android:text="@string/data_display_areas"
        android:fontFamily="@font/roboto"
        android:textSize="15sp"
        android:textColor="@color/primary_text_blue"

        android:layout_marginTop="32dp"

        app:layout_constraintStart_toStartOf="@id/recognition_2_tab_2_time_holder"
        app:layout_constraintTop_toBottomOf="@id/recognition_2_tab_2_id_holder"/>

    <ImageView
        android:id="@+id/recognition_2_tab_2_map_plug"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:background="@drawable/background_map_plug_small"
        android:elevation="4dp"

        android:src="@drawable/ic_map_plug_small"

        app:layout_constraintStart_toStartOf="@id/recognition_2_tab_2_map_title"
        app:layout_constraintTop_toBottomOf="@id/recognition_2_tab_2_map_title"/>

</androidx.constraintlayout.widget.ConstraintLayout>
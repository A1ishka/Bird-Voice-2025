<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    tools:ignore="ContentDescription"

    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/recognition_2_rv_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="16dp"
        android:layout_marginBottom="12dp"
        android:layout_marginHorizontal="16dp"

        android:background="@drawable/rv_bird_card_2"
        android:elevation="5dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/recognition_2_rv_item_title_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="18dp"
            android:layout_marginHorizontal="32dp"

            android:padding="4dp"

            android:background="@drawable/rv_bird_card_2"
            android:elevation="5dp"

            app:layout_constraintEnd_toEndOf="@id/recognition_2_rv_item_image"
            app:layout_constraintStart_toStartOf="@id/recognition_2_rv_item_image"
            app:layout_constraintTop_toTopOf="@id/recognition_2_rv_item">

            <TextView
                android:id="@+id/recognition_2_rv_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:fontFamily="@font/roboto"
                android:text="@string/common_blackbird"
                android:textColor="@color/primary_text_blue"
                android:textSize="18sp"
                android:textStyle="bold"

                app:layout_constraintBottom_toBottomOf="@id/recognition_2_rv_item_title_container"
                app:layout_constraintEnd_toEndOf="@id/recognition_2_rv_item_title_container"
                app:layout_constraintStart_toStartOf="@id/recognition_2_rv_item_title_container"
                app:layout_constraintTop_toTopOf="@id/recognition_2_rv_item_title_container" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/recognition_2_rv_item_image"
            android:layout_width="match_parent"
            android:layout_height="160dp"

            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="16dp"

            android:src="@drawable/ic_bird_card_1_large"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/recognition_2_rv_item_title_container" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/recognition_2_rv_item_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="@string/add_to_collection"
            android:textColor="@color/primary_text_blue"
            android:textSize="14sp"
            android:textAllCaps="false"

            app:cornerRadius="32dp"
            app:rippleColor="@color/primary_button_push"
            app:backgroundTint="@color/white"

            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="6dp"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/recognition_2_rv_item_image" />

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/recognition_2_rv_item_open_pager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:visibility="gone"
            android:background="@drawable/rv_bird_card_2"

            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="4dp"

            app:layout_constraintTop_toBottomOf="@id/recognition_2_rv_item_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/recognition_2_rv_item_open_tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:visibility="gone"
            android:background="@drawable/background_tabs_unactivated"
            android:backgroundTint="@color/primary_tabs_push"
            android:layout_marginHorizontal="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="32dp"

            app:tabRippleColor="@color/primary_tabs_push"
            app:tabPadding="2dp"
            app:tabTextColor="@color/secondary_text_blue"
            app:tabIndicatorAnimationMode="elastic"
            app:tabSelectedTextColor="@color/primary_text_blue"
            app:tabIndicator="@drawable/background_tabs_indicator"
            app:tabIndicatorColor="@color/white"
            app:tabMode="fixed"
            app:tabGravity="fill"
            app:tabIndicatorGravity="stretch"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/recognition_2_rv_item"
            app:layout_constraintTop_toBottomOf="@id/recognition_2_rv_item_open_pager"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/recognition_2_rv_item_open_button_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:visibility="gone"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/recognition_2_rv_item">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/recognition_2_rv_item_open_button_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginHorizontal="8dp"

            android:fontFamily="@font/roboto"
            android:textAllCaps="false"
            android:textColor="@color/secondary_text_blue"
            android:textSize="16sp"

            app:icon="@drawable/ic_arrow_up"
            app:iconTint="@color/primary_text_blue"

            app:backgroundTint="@color/white"
            app:cornerRadius="12dp"

            app:layout_constraintEnd_toStartOf="@+id/recognition_2_rv_item_open_button_2"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/recognition_2_rv_item_open_button_holder"
            app:rippleColor="@color/primary_button_push" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/recognition_2_rv_item_open_button_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"

            android:layout_marginHorizontal="8dp"

            android:fontFamily="@font/roboto"
            android:text="@string/add_to_collection"
            android:textAllCaps="false"

            android:textColor="@color/primary_text_blue"
            android:textSize="16sp"
            app:backgroundTint="@color/white"
            app:cornerRadius="12dp"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/recognition_2_rv_item_open_button_1"
            app:layout_constraintTop_toTopOf="@id/recognition_2_rv_item_open_button_holder"
            app:rippleColor="@color/primary_button_push" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/recognition_2_rv_item_view_1"
        android:layout_width="match_parent"
        android:layout_height="12dp"

        app:layout_constraintTop_toBottomOf="@id/recognition_2_rv_item"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/recognition_2_rv_item_view_2"
        android:layout_width="match_parent"
        android:layout_height="32dp"

        android:visibility="gone"

        app:layout_constraintTop_toBottomOf="@id/recognition_2_rv_item_open_button_holder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
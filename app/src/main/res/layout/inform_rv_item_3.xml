<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:background="@drawable/rv_item_shape_2"
    android:elevation="4dp"
    android:layout_marginHorizontal="12dp"
    android:layout_marginTop="16dp"
    tools:ignore="ContentDescription"

    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/inform_rv_item_3_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="@string/choosing_the_necessary_part"
        android:textColor="@color/primary_text_blue"
        android:textSize="18sp"
        android:fontFamily="@font/roboto"
        android:textStyle="bold"

        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/inform_rv_item_3_wave"
        android:layout_width="400dp"
        android:layout_height="75dp"

        android:src="@drawable/ic_sound_wave"

        android:layout_marginTop="16dp"

        app:layout_constraintTop_toBottomOf="@id/inform_rv_item_3_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/inform_rv_item_3_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="@string/inform_rv_item_3_description"
        android:textSize="16sp"
        android:textColor="@color/primary_text_blue"
        android:fontFamily="@font/roboto"

        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="20dp"

        app:layout_constraintTop_toBottomOf="@id/inform_rv_item_3_wave"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>